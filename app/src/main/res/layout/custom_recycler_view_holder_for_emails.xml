<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <GridLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="vertical"
                android:background="@drawable/custom_background_less_botom_border_for_headings"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:columnCount="2"
                android:padding="16dp"
                android:rowCount="4"
                android:useDefaultMargins="true"
                android:alignmentMode="alignBounds"
    >
        <!--Header Side for information-->
        <TextView
                android:fontFamily="@font/inter_black"
                android:id="@+id/inCustomRecyclerHolder_FromWhomComponent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:text="Here goes the From Whom Section"
                android:padding="2dp"
                android:gravity="start|center_vertical"
                android:singleLine="false"
                android:maxLines="4"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="1sp"
                android:textAlignment="gravity"
                android:ellipsize="end"/>

        <TextView
                android:fontFamily="@font/inter_medium"
                android:id="@+id/inCustomRecyclerHolder_EmailIDComponent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="end|center_vertical"
                android:padding="2dp"
                android:gravity="end|center_vertical"
                android:singleLine="false"
                android:maxLines="4"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="1sp"
                android:textAlignment="gravity"
                android:text="Here goes the Email ID"
                android:ellipsize="end"/>

        <!--Second row for second information-->
        <TextView
                android:fontFamily="@font/inter_black"
                android:id="@+id/inCustomRecyclerHolder_ToWhomComponent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:padding="2dp"
                android:gravity="start|center_vertical"
                android:singleLine="false"
                android:maxLines="4"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="1sp"
                android:textAlignment="gravity"
                android:text="Here goes the To Whom Section"
                android:ellipsize="end"/>

        <TextView
                android:fontFamily="@font/inter_medium"
                android:id="@+id/inCustomRecyclerHolder_EmailThreadComponent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="end|center_vertical"
                android:padding="2dp"
                android:gravity="end|center_vertical"
                android:singleLine="false"
                android:maxLines="4"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="1sp"
                android:textAlignment="gravity"
                android:text="Here goes the Email Thread"
                android:ellipsize="end"/>

        <TextView
                android:id="@+id/inCustomRecyclerHolder_EmailSubjectComponent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:padding="2dp"
                android:gravity="start|center_vertical"
                android:singleLine="false"
                android:maxLines="4"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="1sp"
                android:textAlignment="gravity"
                android:text="Here goes the Email Subject"
                android:ellipsize="end"/>

        <TextView
                android:id="@+id/inCustomRecyclerHolder_EmailDateComponent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:padding="2dp"
                android:gravity="start|center_vertical"
                android:singleLine="false"
                android:maxLines="4"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="1sp"
                android:textAlignment="gravity"
                android:text="Here goes the Email Date"
                android:ellipsize="end"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>