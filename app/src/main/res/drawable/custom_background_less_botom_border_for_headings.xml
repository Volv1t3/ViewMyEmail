<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Estas lineas de android left right and top , le mueven al borde a tal
     punto que lo esconden, sacandolo del frame y haciendo que solo se vea el
      borde de abajo, para cambiar donde sale el borde, simplemente movemos
      los -5dp y a que lado referencian.-->
    <item
            android:top="-10dp"
            android:left="-10dp"
            android:right="-10dp"

    >
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>

            <stroke
                    android:width="5dp"
                    android:color="@color/palette_bayLeaf_green_200"/>
        </shape>
    </item>

</layer-list>